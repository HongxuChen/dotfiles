# -*- mode: sh -*-
# vim: ft=sh
alias rsync-copy="rsync -av --progress -h"
alias rsync-move="rsync -av --progress -h --remove-source-files"
alias rsync-update="rsync -avu --progress -h"
alias rsync-synchronize="rsync -avu --delete --progress -h"
alias rsync-cpv="rsync -poghb --backup-dir=/tmp/rsync -e /dev/null --progress --"
alias release-memory='sudo sh -c "sync; echo 3 > /proc/sys/vm/drop_caches"'
alias dstat='dstat -cdlmnpsy'
alias goagent="~/data_backup/goagent-goagent/local/goagent-gtk.py &disown"
alias telnet="luit -encoding gb18030 telnet"
alias v6='sudo isatapd -d isatap.sjtu.edu.cn'
alias chromium-browser="chromium-browser &>/dev/null & disown"
alias firefox="firefox &>/dev/null & disown"
alias pyhttpd='python -m SimpleHTTPServer'
alias rdp_lab='rdesktop -f -u hongxu -r sound:local -r clipboard:PRIMARYCLIPBOARD -r disk:home=/home/hongxuchen 202.120.40.98:62240  &>/dev/null & disown'
alias gdb='gdb -q'
alias grt='cd $(git rev-parse --show-toplevel)'
alias la='ls -a'
alias q="exit"
alias l='ls -F'
alias ll='ls -lh'
alias whatg++='g++ -E -x c++  /dev/null -dM'
alias whatgcc='gcc -E -x c  /dev/null -dM'
#Google style
alias indent="command indent -kr -ci2 -cli2 -i2 -l80 -nut"

alias sudo='sudo '
alias sl='ls' # so there would be no *sl train*
alias more='less'               #`less` is more than `more`
alias info='man'                # NEVER use `info' in the terminal
# alias rm='trash-put'           #not the rude `rm`

alias ...='cd ../..'
alias d='dirs -v | head -10'
alias rdm='command rdm &>/tmp/log_rdm &'
