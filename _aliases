        alias my_installed_app='mdfind kMDItemContentTypeTree=com.apple.application-bundle -onlyin /'
        alias emacs='/Applications/Emacs.app/Contents/MacOS/Emacs.sh -nw'
        alias mv='/bin/mv'
    fi
fi

