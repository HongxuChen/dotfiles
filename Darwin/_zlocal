MY_HOME_BIN=~/.bin
export GOPATH=~/gocode

# use newest('system')
MY_OPAM="${HOME}/.opam/system"
export CAML_LD_LIBRARY_PATH="${MY_OPAM}/lib/stublibs:/usr/local/lib/ocaml/stublibs"
